<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".centreOtpVerifyActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_otp" />

        <TextView
            android:id="@+id/textView4_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Verify OTP"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2_2" />

        <TextView
            android:id="@+id/textView5_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Enter your received OTP here"
            app:layout_constraintEnd_toEndOf="@+id/textView4_2"
            app:layout_constraintStart_toStartOf="@+id/textView4_2"
            app:layout_constraintTop_toBottomOf="@+id/textView4_2" />

        <TextView
            android:id="@+id/tvMobile_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="+91-1234567890"
            app:layout_constraintEnd_toEndOf="@+id/textView4_2"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="@+id/textView4_2"
            app:layout_constraintTop_toBottomOf="@+id/textView5_2" />

        <EditText
            android:id="@+id/etC1_2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="3dp"
            android:background="@drawable/border"
            android:ems="10"
            android:gravity="center"
            android:inputType="phone"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/etC2_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMobile_2" />

        <EditText
            android:id="@+id/etC2_2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="3dp"
            android:background="@drawable/border"
            android:ems="10"
            android:gravity="center"
            android:inputType="phone"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/etC1_2"
            app:layout_constraintEnd_toStartOf="@+id/etC3_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/etC1_2"
            app:layout_constraintTop_toTopOf="@+id/etC1_2" />

        <EditText
            android:id="@+id/etC3_2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="3dp"
            android:background="@drawable/border"
            android:ems="10"
            android:gravity="center"
            android:inputType="phone"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/etC1_2"
            app:layout_constraintEnd_toStartOf="@+id/etC4_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/etC2_2"
            app:layout_constraintTop_toTopOf="@+id/etC1_2" />

        <EditText
            android:id="@+id/etC4_2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="3dp"
            android:background="@drawable/border"
            android:ems="10"
            android:gravity="center"
            android:inputType="phone"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/etC1_2"
            app:layout_constraintEnd_toStartOf="@+id/etC5_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/etC3_2"
            app:layout_constraintTop_toTopOf="@+id/etC1_2" />

        <EditText
            android:id="@+id/etC5_2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="3dp"
            android:background="@drawable/border"
            android:ems="10"
            android:gravity="center"
            android:inputType="phone"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/etC1_2"
            app:layout_constraintEnd_toStartOf="@+id/etC6_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/etC4_2"
            app:layout_constraintTop_toTopOf="@+id/etC1_2" />

        <EditText
            android:id="@+id/etC6_2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/border"
            android:ems="10"
            android:gravity="center"
            android:inputType="phone"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/etC1_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/etC5_2"
            app:layout_constraintTop_toTopOf="@+id/etC1_2"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView7_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Don't get the OTP?"
            app:layout_constraintEnd_toStartOf="@+id/tvResendBtn_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etC6_2" />

        <TextView
            android:id="@+id/tvResendBtn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="RESEND OTP"
            android:textColor="#FF3838"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textView7_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView7_2"
            app:layout_constraintTop_toTopOf="@+id/textView7_2" />

        <Button
            android:id="@+id/btnVerify_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="50dp"
            android:text="VERIFY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7_2" />

        <ProgressBar
            android:id="@+id/progressBarVerify_2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/btnVerify_2"
            app:layout_constraintEnd_toEndOf="@+id/btnVerify_2"
            app:layout_constraintStart_toStartOf="@+id/btnVerify_2"
            app:layout_constraintTop_toTopOf="@+id/btnVerify_2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>